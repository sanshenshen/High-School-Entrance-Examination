<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 退出动画：从右向左滑动 -->
    <translate
        android:fromXDelta="0%"
        android:toXDelta="100%"
        android:duration="300" />

    <!-- 退出动画：渐隐效果 -->
    <alpha
        android:fromAlpha="1"
        android:toAlpha="0"
        android:duration="300" />
</set>
